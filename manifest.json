{
    "manifest_version": 2,
    "name": "Proxy Settings Display",
    "version": "0.1.0",
    "description": "Displays the current proxy settings of your Firefox browser.",
    "author": "Andrey Molfly",
    "permissions": [
        "proxy",
        "storage",
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/favicon.ico",
            "48": "icons/favicon.ico",
            "128": "icons/favicon.ico"
        }
    },
    "background": {
        "scripts": ["background.js"]
    },
    "icons": {
        "16": "icons/favicon.ico",
        "48": "icons/favicon.ico",
        "128": "icons/favicon.ico"
    }
}
